[user]
	name = Guilherme Amadio
	email = guilherme@amadio.org
	signingkey = 0x163f3352a3b4f9fb

[github]
	user = amadio

[sendemail]
	confirm = auto
	sendmailCmd = /usr/bin/msmtp
	suppresscc = self

[core]
	excludesfile = ~/.gitignore
	whitespace = trailing-space
	autocrlf = input

[commit]
	gpgsign = true

[format]
	signOff = yes

[tag]
	sort = v:refname

[log]
	decorate = true

[alias]
	unstage = reset HEAD --
	fixup = commit --amend --no-edit
	lg = log --oneline
	full-log = log --all --decorate --graph --oneline
	sync = fetch --all --prune --tags

[http]
	cookiefile = /home/amadio/.gitcookies
	emptyAuth = true

[color]
	ui = true

[color "diff"]
	old = red bold
	new = green bold
	meta = cyan bold
	frag = yellow bold
	func = blue bold
	whitespace = red reverse

[status]
	short = true
	branch = true

[diff]
	algorithm = patience

[fetch]
	prune = true

[merge]
	tool = vimdiff

[pager]
	diff = diff-highlight | less
	show = diff-highlight | less

[pull]
	ff = only
	rebase = merges

[push]
	default = current

[rebase]
	autoSquash = true
	autoStash = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
